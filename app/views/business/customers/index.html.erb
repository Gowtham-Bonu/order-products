<div class="part" ><%= link_to "create a new customer", new_business_customer_path %></div>
<table class="table table-dark table-striped" >
  <thead>
    <tr>
      <th>Customer</th>
      <th>age</th>
      <th>phone</th>
      <th>email</th>
      <th colspan="2" >action</th>
    </tr>  
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.name, preview_path(customer)  %></td>
        <td><%= customer.age %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td><button class=" btn btn-light"><%= link_to "edit", edit_business_customer_path(customer) %></button></td>
        <td><button class="delete  btn btn-light"><%= link_to "Destroy", delete_customer_path(customer), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
